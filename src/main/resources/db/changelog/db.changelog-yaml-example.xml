    <changeSet id="dhiraj-110" author="dhiraj">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="sub_user_permission"/>
            </not>
        </preConditions>
        <createTable tableName="sub_user_permission">
            <column name="sub_user_id" type="raw(16)">
                <constraints nullable="false"/>
            </column>
            <column name="permission_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="permissions" baseColumnNames="permission_name"
                                 referencedTableName="management_users" referencedColumnNames="sub_user_id"
                                 constraintName="fk_permission_sub_user_key"/>

        <addForeignKeyConstraint baseTableName="management_users" baseColumnNames="sub_user_id"
                                 referencedTableName="permissions" referencedColumnNames="permission_name"
                                 constraintName="fk_sub_user_permission_key"/>
    </changeSet>

</databaseChangeLog>