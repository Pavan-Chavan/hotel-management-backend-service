<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--Change Set to create table roles -->
    <changeSet id="dhiraj-101" author="dhiraj">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="roles"/>
            </not>
        </preConditions>
        <createTable tableName="roles">
            <column name="role_name" type="varchar(255)">
                <constraints primaryKey="true" nullable="false" />
            </column>
        </createTable>
    </changeSet>
    <!--Change Set to add few dummy records into table -->
    <changeSet id="dhiraj-103" author="dhiraj">
        <sqlFile path="db/procedure/roles-procedure.sql"
                 endDelimiter=";"
                 splitStatements="true"
                 stripComments="true"
                 dbms="oracle"
                 encoding="UTF-8"/>
    </changeSet>

    <!--Change Set to create table permissions -->
    <changeSet id="dhiraj-104" author="dhiraj">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="permissions"/>
            </not>
        </preConditions>
        <createTable tableName="permissions">
            <column name="permission_name" type="varchar(255)">
                <constraints primaryKey="true" nullable="false" />
            </column>
        </createTable>
    </changeSet>
    <!--Change Set to add few dummy records into table permission -->
    <changeSet id="dhiraj-106" author="dhiraj">
        <sqlFile path="db/procedure/permissions-procedure.sql"
                 endDelimiter=";"
                 splitStatements="true"
                 stripComments="true"
                 dbms="oracle"
                 encoding="UTF-8"/>
    </changeSet>
    <!--Change Set to create table login_credentials -->
    <changeSet id="dhiraj-107" author="dhiraj">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="login_credentials"/>
            </not>
        </preConditions>
        <createTable tableName="login_credentials">
            <column name="username" type="varchar(255)">
                <constraints primaryKey="true" />
            </column>
            <column name="pass_word" type="varchar(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <!--Change Set to create table management_users -->
    <changeSet id="dhiraj-109" author="dhiraj">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="management_users"/>
            </not>
        </preConditions>
        <createTable tableName="management_users">
            <column name="sub_user_id" type="RAW(16)">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="role_name" type="varchar(255)">
                <constraints nullable="false" foreignKeyName="fk_role_role_name" references="roles(role_name)"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false" foreignKeyName="fk_login_username" references="login_credentials(username)"/>
            </column>

        </createTable>
    </changeSet>

